// Operaciones con variables lógicas
var valUno = true;
var valDos = true;
// Negación
var dato = !valUno;
// alert(dato)

// AND (&&) -> Conjunción
// Devuelve True: solo si ambos lados de la operación son True.
// 				  caso contrario devuelve False
dato = valUno && valDos;

// OR (||) ASCII Alt + 124 -> Disyunción
// Devuelve False: Solo si ambos lados de la operación son False,
// 				   caso contrario devuelve True
dato = valUno || valDos;

// Relacionales (Operaciones de comparación)
num1 = 60;
num2 = 10;
dato = num1 > num2; // Mayor
dato = num1 < num2; // Menor
dato = num1 >= num2; // Mayor o igual 
dato = num1 <= num2; // Menor o igual
dato = num1 == num2; // Igualdad
dato = num1 != num2; // Distinto 
var texto = "Juan "
dato = texto == ""

